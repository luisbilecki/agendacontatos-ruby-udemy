<div class="basic-grey">
  <p id="notice"><%= notice %></p>
  <% a = 1+3 %>

  <h1><%= "#{t('message.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle('white','#f0f0f5');%>">
          <td><%= kind.description %></td>
          <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
          <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
    <%= link_to "#{t('buttons.new')} #{@kinds.model.model_name.human(count: 1)}", new_kind_path, class: "btn btn-primary" %>
  <%= link_to t('buttons.home'), root_path, class: "btn btn-success" %>
</div>
